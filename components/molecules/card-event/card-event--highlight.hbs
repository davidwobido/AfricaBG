<div class="card-event card-event--highlight">
  <header class="card-event__header">
    {{> @icon--calendar-white}}
    <div class="card-event__main-info">
      <span class="text-microtext__bold">{{card-event--highlight.date}}</span>
      <span class="text-microtext">{{card-event--highlight.location}}</span>
    </div>
  </header>
  <div class="card-event__text-block">
    <span class="text-microtext__bold">{{card-event--highlight.preline}}</span>
    <a href="{{card-event--highlight.to}}">
      <H3 class="text--primary">{{card-event--highlight.headline}}</H3>
    </a>
    <p class="text-microtext">{{card-event--highlight.copy}}</p>
    <span class="text-microtext">{{card-event--highlight.tags}}</span>
  </div>
</div>